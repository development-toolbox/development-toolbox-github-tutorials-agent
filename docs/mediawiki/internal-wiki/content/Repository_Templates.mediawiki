        mkdir -p /tmp/$PROJECT_NAME
        
        # Copy common files
        cp -r .github /tmp/$PROJECT_NAME/
        cp README.md LICENSE .gitignore /tmp/$PROJECT_NAME/
        
        # Copy language-specific templates
        case $PROJECT_TYPE in
