          cp -r templates/database/* /tmp/$PROJECT_NAME/
        fi
        
        if [ "${{ github.event.inputs.include_docker }}" = "true" ]; then
          cp templates/docker/Dockerfile /tmp/$PROJECT_NAME/
          cp templates/docker/docker-compose.yml /tmp/$PROJECT_NAME/
