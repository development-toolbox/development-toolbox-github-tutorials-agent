    const recommendations = [];
    
    if (avgComplexity > 10) {
      recommendations.push('âš ï¸ High cyclomatic complexity detected. Consider breaking down complex functions.');
    }
    
    if (this.metrics.totalLines / this.metrics.totalFiles > 300) {
