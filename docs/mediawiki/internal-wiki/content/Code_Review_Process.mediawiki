    if (this.metrics.totalFunctions / this.metrics.totalFiles < 3) {
      recommendations.push('ðŸ”§ Low function density. Consider breaking down large functions.');
    }
    
    return recommendations;
  }
  
  getJavaScriptFiles(dir) {
    const files = [];
